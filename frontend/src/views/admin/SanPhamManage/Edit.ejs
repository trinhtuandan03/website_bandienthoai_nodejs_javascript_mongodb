@model WebBatDongSan_DKCN.Models.SanPham

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container-fluid dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Sửa Sản Phẩm</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="Index" class="breadcrumb-link">Quản Lý Sản Phẩm</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Sửa Sản Phẩm</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end pageheader -->
    <!-- ============================================================== -->

    <div class="row">
        <div class="offset-xl-2 col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header p-4">
                    <h4 class="mb-0">Chỉnh sửa sản phẩm</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <!-- Hidden field to store the ID -->
                        <input type="hidden" asp-for="IdSanpham" />

                        <!-- Tiêu Đề Sản Phẩm -->
                        <div class="form-group row">
                            <label asp-for="TieuDeSanpham" class="col-12 col-sm-3 col-form-label text-sm-right">Tiêu Đề</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input asp-for="TieuDeSanpham" class="form-control" placeholder="Nhập tiêu đề sản phẩm" />
                                <span asp-validation-for="TieuDeSanpham" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Mô Tả Sản Phẩm -->
                        <div class="form-group row">
                            <label asp-for="MoTaSanpham" class="col-12 col-sm-3 col-form-label text-sm-right">Mô Tả</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input asp-for="MoTaSanpham" class="form-control" placeholder="Nhập mô tả sản phẩm" />
                                <span asp-validation-for="MoTaSanpham" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Giá Sản Phẩm -->
                        <div class="form-group row">
                            <label asp-for="GiaSanPham" class="col-12 col-sm-3 col-form-label text-sm-right">Giá</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input asp-for="GiaSanPham" class="form-control" placeholder="Nhập giá sản phẩm" />
                                <span asp-validation-for="GiaSanPham" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Diện Tích -->
                        <div class="form-group row">
                            <label asp-for="DienTich" class="col-12 col-sm-3 col-form-label text-sm-right">Diện Tích</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input asp-for="DienTich" class="form-control" placeholder="Nhập diện tích" />
                                <span asp-validation-for="DienTich" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Ngày Đăng -->
                        <div class="form-group row">
                            <label asp-for="NgayDang" class="col-12 col-sm-3 col-form-label text-sm-right">Ngày Đăng</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input asp-for="NgayDang" type="datetime-local" class="form-control" />
                                <span asp-validation-for="NgayDang" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Hình Ảnh 1 -->
                        <div class="form-group row">
                            <label asp-for="Img1" class="col-12 col-sm-3 col-form-label text-sm-right">Hình Ảnh 1</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input asp-for="Img1" class="form-control" />
                                <span asp-validation-for="Img1" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Hình Ảnh 2 -->
                        <div class="form-group row">
                            <label asp-for="Img2" class="col-12 col-sm-3 col-form-label text-sm-right">Hình Ảnh 2</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input asp-for="Img2" class="form-control" />
                                <span asp-validation-for="Img2" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Hình Ảnh 3 -->
                        <div class="form-group row">
                            <label asp-for="Img3" class="col-12 col-sm-3 col-form-label text-sm-right">Hình Ảnh 3</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input asp-for="Img3" class="form-control" />
                                <span asp-validation-for="Img3" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Hình Ảnh 4 -->
                        <div class="form-group row">
                            <label asp-for="Img4" class="col-12 col-sm-3 col-form-label text-sm-right">Hình Ảnh 4</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input asp-for="Img4" class="form-control" />
                                <span asp-validation-for="Img4" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Hình Ảnh 5 -->
                        <div class="form-group row">
                            <label asp-for="Img5" class="col-12 col-sm-3 col-form-label text-sm-right">Hình Ảnh 5</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input asp-for="Img5" class="form-control" />
                                <span asp-validation-for="Img5" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Người Dùng -->
                        <div class="form-group row">
                            <label asp-for="IdUser" class="col-12 col-sm-3 col-form-label text-sm-right">Người Dùng</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <select asp-for="IdUser" class="form-control" asp-items="ViewBag.IdUser"></select>
                                <span asp-validation-for="IdUser" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Giấy Tờ Tài Liệu -->
                        <div class="form-group row">
                            <label asp-for="IdGiaytoTailieu" class="col-12 col-sm-3 col-form-label text-sm-right">Giấy Tờ Tài Liệu</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <select asp-for="IdGiaytoTailieu" class="form-control" asp-items="ViewBag.IdGiaytoTailieu"></select>
                                <span asp-validation-for="IdGiaytoTailieu" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Loại Tin -->
                        <div class="form-group row">
                            <label asp-for="IdLoaitin" class="col-12 col-sm-3 col-form-label text-sm-right">Loại Tin</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <select asp-for="IdLoaitin" class="form-control" asp-items="ViewBag.IdLoaitin"></select>
                                <span asp-validation-for="IdLoaitin" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Loại Bất Động Sản -->
                        <div class="form-group row">
                            <label asp-for="IdLoaibds" class="col-12 col-sm-3 col-form-label text-sm-right">Loại Bất Động Sản</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <select asp-for="IdLoaibds" class="form-control" asp-items="ViewBag.IdLoaibds"></select>
                                <span asp-validation-for="IdLoaibds" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Tỉnh Thành -->
                        <div class="form-group row">
                            <label asp-for="IdTinhthanh" class="col-12 col-sm-3 col-form-label text-sm-right">Tỉnh Thành</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <select asp-for="IdTinhthanh" class="form-control" asp-items="ViewBag.IdTinhthanh"></select>
                                <span asp-validation-for="IdTinhthanh" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Quận Huyện -->
                        <div class="form-group row">
                            <label asp-for="IdQuanhuyen" class="col-12 col-sm-3 col-form-label text-sm-right">Quận Huyện</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <select asp-for="IdQuanhuyen" class="form-control" asp-items="ViewBag.IdQuanhuyen"></select>
                                <span asp-validation-for="IdQuanhuyen" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Xã Phường -->
                        <div class="form-group row">
                            <label asp-for="IdPhuongxa" class="col-12 col-sm-3 col-form-label text-sm-right">Xã Phường</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <select asp-for="IdPhuongxa" class="form-control" asp-items="ViewBag.IdPhuongxa"></select>
                                <span asp-validation-for="IdPhuongxa" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Chiều Ngang -->
                        <div class="form-group">
                            <label asp-for="Chieungang" class="control-label"></label>
                            <input asp-for="Chieungang" class="form-control" />
                            <span asp-validation-for="Chieungang" class="text-danger"></span>
                        </div>

                        <!-- Chiều Dài -->
                        <div class="form-group">
                            <label asp-for="Chieudai" class="control-label"></label>
                            <input asp-for="Chieudai" class="form-control" />
                            <span asp-validation-for="Chieudai" class="text-danger"></span>
                        </div>

                        <!-- Số Lầu -->
                        <div class="form-group">
                            <label asp-for="SoLau" class="control-label"></label>
                            <input asp-for="SoLau" class="form-control" />
                            <span asp-validation-for="SoLau" class="text-danger"></span>
                        </div>

                        <!-- Số Phòng Ngủ -->
                        <div class="form-group">
                            <label asp-for="SoPhongNgu" class="control-label"></label>
                            <input asp-for="SoPhongNgu" class="form-control" />
                            <span asp-validation-for="SoPhongNgu" class="text-danger"></span>
                        </div>

                        <!-- Phòng Ăn -->
                        <div class="form-group">
                            <label asp-for="PhongAn" class="control-label"></label>
                            <input asp-for="PhongAn" class="form-control" />
                            <span asp-validation-for="PhongAn" class="text-danger"></span>
                        </div>

                        <!-- Nhà Bếp -->
                        <div class="form-group">
                            <label asp-for="NhaBep" class="control-label"></label>
                            <input asp-for="NhaBep" class="form-control" />
                            <span asp-validation-for="NhaBep" class="text-danger"></span>
                        </div>

                        <!-- Sân Thượng -->
                        <div class="form-group">
                            <label asp-for="SanThuong" class="control-label"></label>
                            <input asp-for="SanThuong" class="form-control" />
                            <span asp-validation-for="SanThuong" class="text-danger"></span>
                        </div>

                        <!-- Chỗ Để Xe Hơi -->
                        <div class="form-group">
                            <label asp-for="ChoDeXeHoi" class="control-label"></label>
                            <input asp-for="ChoDeXeHoi" class="form-control" />
                            <span asp-validation-for="ChoDeXeHoi" class="text-danger"></span>
                        </div>

                        <!-- Địa Chỉ -->
                        <div class="form-group">
                            <label asp-for="DiaChi" class="control-label"></label>
                            <input asp-for="DiaChi" class="form-control" />
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>

                        <!-- Đường Phố -->
                        <div class="form-group">
                            <label asp-for="IdDuongpho" class="control-label"></label>
                            <select asp-for="IdDuongpho" class="form-control" asp-items="ViewBag.IdDuongpho"></select>
                            <span asp-validation-for="IdDuongpho" class="text-danger"></span>
                        </div>

                        <!-- Phương Hướng -->
                        <div class="form-group">
                            <label asp-for="IdPhuonghuong" class="control-label"></label>
                            <select asp-for="IdPhuonghuong" class="form-control" asp-items="ViewBag.IdPhuonghuong"></select>
                            <span asp-validation-for="IdPhuonghuong" class="text-danger"></span>
                        </div>

                        <!-- Trạng Thái -->
                        <div class="form-group">
                            <label asp-for="IdTrangthai" class="control-label"></label>
                            <select asp-for="IdTrangthai" class="form-control" asp-items="ViewBag.IdTrangthai"></select>
                            <span asp-validation-for="IdTrangthai" class="text-danger"></span>
                        </div>

                        <!-- Nút Thao Tác -->
                        <div class="form-group row text-right">
                            <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-3">
                                <input type="submit" value="Lưu" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
